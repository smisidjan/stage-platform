{% extends "base.html.twig" %}

{% block content %}
    <section class="section-header pb-10 pb-lg-11 mb-4 mb-lg-6 bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center mb-4 mb-lg-5">
                    <h1 class="display-2 font-weight-extreme mb-4">{{ team.name|trans|capitalize }}</h1>
                    <p class="lead">{{ team.description }}</p>
                    <div class="d-flex flex-column flex-lg-row justify-content-center">
                        {% for person in team.participants %}
                            <span class="h5 mb-3 mb-lg-0"><i class="fas fa-user-tie text-secondary"></i><span
                                    class="ml-3">{{ person|length }}</span></span>
                        {% endfor %}
{#                        /* @todo hier moeten het aantal challenges komen waar een team aan mee doet#}
                            <span class="ml-lg-5 mb-3 mb-lg-0 h5"><i
                                    class="fas fa-bullseye-arrow text-primary"></i><span
                                    class="ml-3">{{ numberOfEntries }}</span></span>
                    </div>
                </div>
                <div class="col col-12 text-center"><a href="{{ path('app_team_index') }}"
                                                       class="btn btn-secondary text-white animate-up-2 mr-3"><i
                            class="fas fa-arrow-left mr-2"></i>{{ 'See All Teams'|trans|capitalize }}</a><a
                        href="#apply" class="btn btn-white text-primary animate-up-2"><i
                            class="fas fa-clipboard-list mr-2"></i>{{ 'Apply Now'|trans|capitalize }}</a></div>
            </div>
        </div>
        <div class="pattern bottom"></div>
    </section>


    <article class="section section-lg pt-0">
        <div class="container mt-n8 mt-lg-n11 z-2">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="card shadow-soft border-light p-4 p-md-5">
                        <div class="card-body">
                            {{ team.description }}
                        </div>
{#                        /* @todo hier moeten de challenges komen waar een team aan mee doet#}
                        <div class="card-body">
                            <h6>{{ 'challenges this team participates in'|trans|capitalize }}</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col">
                <div class="card bg-soft shadow-soft border-light p-4 p-md-5">
                    <div class="mb-1 text-center">
                        <h2 class="h1">{{ 'apply for this team'|trans|capitalize }}</h2>
                    </div>

                    {% if app.user is defined and app.user is not null %}
                        <form action="{{ path('app_team_team', {id: team.id}) }}" method="post">
                            <div class="row">
                                <div class="col col-12 mt-4">
                                    <div class="form-group">
                                        <label class="form-label text-muted"
                                               for="motivation">{{ 'motivation'|trans|capitalize }} <span
                                                class="text-danger">*</span></label>
                                        <textarea class="form-control"
                                                  placeholder="{{ 'motivate your application'|trans|capitalize }}"
                                                  id="motivation" name="motivation" rows="8" required=""></textarea>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-secondary mt-4"><span class="mr-2"><i
                                                    class="fas fa-paper-plane"></i></span> {{ 'register'|trans|capitalize }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    {% else %}
                        <p class="mt-4 text-center">{{ 'you need to be logged in to register for a tutorial'|trans|capitalize }}</p>
                        <a class="mt-2 text-center btn btn-secondary"
                           href="{{ path('app_user_idvault') }}">{{ 'click here to log in'|trans|capitalize }} </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
