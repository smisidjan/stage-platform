{% extends "dashboard/base.html.twig" %}

{% block content %}
    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span
                                class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboardorganization_tutorials') }}">{{ 'Tutorials'|trans|capitalize }}</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'Tutorial'|trans|capitalize }}</li>
                </ol>
            </nav>
            <h2 class="h4">{{ tutorial.name }}</h2>
            <p class="mb-0">[text about what a tutorial is]</p>
        </div>
    </div>


    <form action="{{ path('app_dashboardorganization_tutorial',{'id': tutorial.id}) }}" method="post">

        <!-- left collum -->
        <div class="row">
            <div class="col-12 col-xl-8">
                <div class="card card-body bg-white border-light shadow-sm mb-4">
                    <h2 class="h5 mb-4">General information</h2>
                    {% if tutorial['@id'] is defined and tutorial['@id'] is not empty %}
                        <input type="hidden" name="@id" id="@id" value="{{ tutorial['@id'] }}">
                    {% endif %}


                    <input type="hidden" name="organization" id="organization"
                           value="https://dev.zuid-drecht.nl/api/v1/wrc/organizations/c571bdad-f34c-4e24-94e7-74629cfaccc9">


                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="Tutorial name">{{ 'Tutorial name'|trans|capitalize }}</label>
                                <input class="form-control" id="name" type="text"
                                       required=""
                                    {% if tutorial.name is defined and tutorial.name is not empty %}
                                        value="{{ tutorial.name }}" {% else %}
                                        placeholder="{{ 'your tutorial name...'|trans|capitalize }}"{% endif %}
                                       name="name" required>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="description">{{ 'Tutorial description'|trans|capitalize }}</label>
                                <input class="form-control" id="description" type="text"
                                       required=""
                                    {% if tutorial.description is defined and tutorial.description is not empty %}
                                        value="{{ tutorial.description }}" {% else %}
                                        placeholder="{{ 'your tutorial description...'|trans|capitalize }}"{% endif %}
                                       name="description" required>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="text">{{ 'Tutorial text'|trans|capitalize }}</label>
                                {% if tutorial.text is defined and tutorial.text is not empty %}
                                    <textarea class="form-control" id="text" name="text" rows="3"
                                              cols="6">{{ tutorial.text }}</textarea>
                                {% else %}
                                    <textarea class="form-control" id="text" name="text"
                                              placeholder="The text of your tutorial will be displayed here..."
                                              rows="3" cols="6"></textarea>{% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="time required">{{ 'Tutorial time required '|trans|capitalize }}</label>
                                <input class="form-control" id="description" type="text"
                                       required=""
                                    {% if tutorial.timeRequired is defined and tutorial.timeRequired is not empty %}
                                        value="{{ tutorial.timeRequired }}" {% else %}
                                        placeholder="{{ 'The time required to read the entire tutorial...'|trans|capitalize }}"{% endif %}
                                       name="timeRequired" required>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="educationalCredentialAwarded">{{ 'Educational credential '|trans|capitalize }}</label>
                                <input class="form-control" id="educationalCredentialAwarded" type="text"
                                       required=""
                                    {% if tutorial.educationalCredentialAwarded is defined and tutorial.educationalCredentialAwarded is not empty %}
                                        value="{{ tutorial.educationalCredentialAwarded }}" {% else %}
                                        placeholder="{{ 'The level of education required for this tutorial...'|trans|capitalize }}"{% endif %}
                                       name="educationalCredentialAwarded" required>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="occupationalCredentialAwarded">{{ 'Occupational Credential'|trans|capitalize }}</label>
                                {% if tutorial.occupationalCredentialAwarded is defined and tutorial.occupationalCredentialAwarded is not empty %}
                                    <textarea class="form-control" id="text" name="text" rows="3"
                                              cols="6">{{ tutorial.occupationalCredentialAwarded }}</textarea>
                                {% else %}
                                    <textarea class="form-control" id="text" name="text"
                                              placeholder="Indicate in the tutorial which professional certificate you receive..."
                                              rows="3" cols="6"></textarea>{% endif %}
                            </div>
                        </div>
                    </div>


                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Save All</button>
                    </div>
                </div>

                <h3 class="h4">Participants</h3>
                {% if participants|default %}
                    <p class="mb-0">These people are following your tutorial</p>

                    <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="border-0">
                                    <div class="form-check dashboard-check">
                                        <input class="form-check-input" type="checkbox" value="" id="userCheck55">
                                        <label class="form-check-label" for="userCheck55"></label>
                                    </div>
                                </th>
                                <th class="border-0">Name</th>
                                <th class="border-0">Date Created</th>
                                <th class="border-0">Verified</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                {% for participants in participants %}
                                    <td>
                                        <div class="form-check dashboard-check">
                                            <input class="form-check-input" type="checkbox" value="" id="userCheck1">
                                            <label class="form-check-label" for="userCheck1"></label>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="#" class="d-flex align-items-center"><img
                                                src="../../assets/img/team/profile-picture-1.jpg"
                                                class="user-avatar rounded-circle mr-3" alt="Avatar">
                                            <div class="d-block"><span
                                                    class="font-weight-bold">{{ participants.name }}</span>
                                                <div class="small text-gray">{{ participants.description }}</div>
                                            </div>
                                        </a>
                                    </td>
                                    <td><span
                                            class="font-weight-normal">{{ participants.created|date("d-m-Y", "Europe/Paris") }}</span>
                                    </td>
                                    <td><span class="font-weight-normal"><span
                                                class="fas fa-check-circle text-success mr-2"></span>Email</span>
                                    </td>
                                    <td><span class="font-weight-normal text-success">{{ participants.status }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button
                                                class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span
                                                    class="icon icon-sm"><span
                                                        class="fas fa-ellipsis-h icon-dark"></span> </span><span
                                                    class="sr-only">Toggle Dropdown</span>
                                            </button>

                                            <div class="dropdown-menu"><a class="dropdown-item" href="#"><span
                                                        class="fas fa-user-shield mr-2"></span> Reset Pass</a> <a
                                                    class="dropdown-item" href="#"><span class="fas fa-eye mr-2"></span>View
                                                    Details</a> <a class="dropdown-item text-danger" href="#"><span
                                                        class="fas fa-user-times mr-2"></span>Suspend</a></div>
                                        </div>

                                        <a href="#" class="text-danger ml-2" title="" data-toggle="tooltip"
                                           data-original-title="Delete"><span class="fas fa-times-circle"></span></a>
                                    </td>
                                {% endfor %}
                            </tr>
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="mb-0">There are currently no participants on this tutorial</p>
                {% endif %}
            </div>
            <!-- right collum -->
            <div class="col-12 col-xl-4">
                <div class="row">

                    <div class="col-12 col-sm-6 col-xl-12">
                        <div class="card card-body bg-white border-light shadow-sm mb-4">
                            <div class="d-flex justify-content-between">
                                <h2 class="h5 mb-4">Skills</h2>
                                <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal"
                                        data-target="#modalNewSkill" style="height: 33.33%"><i class="far fa-plus"></i>
                                </button>
                            </div>
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="border-0">Name</th>
                                    <th class="border-0"></th>
                                </tr>
                                </thead>
                                <tbody id="skillsHolder">
                                {% if tutorial.skills|default %}
                                    {% for skill in tutorial.skills %}
                                        <tr>
                                            {% if 'http' in skill %}
                                                {% set skill = commonground_resource(skill) %}
                                                <td>{{ skill.name }}</td>
                                                <td class="text-right">
                                                    <div class="btn-group ml-md-3">
                                                        <button
                                                            class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                            data-toggle="dropdown" aria-haspopup="true"
                                                            aria-expanded="true"><span class="icon icon-sm"><span
                                                                    class="fas fa-ellipsis-h icon-dark"></span> </span><span
                                                                class="sr-only">Toggle Dropdown</span></button>
                                                        <div class="dropdown-menu dropdown-menu-right"
                                                             x-placement="bottom-end"
                                                             style="position: absolute; transform: translate3d(-170px, 26px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                            <a onclick="" class="dropdown-item text-danger"
                                                               href="#"><span
                                                                    class="fas fa-trash-alt mr-2"></span>Remove</a>
                                                        </div>
                                                    </div>
                                                    <input type="hidden" name="skills[]" value="{{ skill['@id'] }}">
                                                </td>
                                            {% else %}
                                                <td>{{ skill }}</td>
                                                <td class="text-right">
                                                    <div class="btn-group ml-md-3">
                                                        <button
                                                            class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                            data-toggle="dropdown" aria-haspopup="true"
                                                            aria-expanded="true"><span class="icon icon-sm"><span
                                                                    class="fas fa-ellipsis-h icon-dark"></span> </span><span
                                                                class="sr-only">Toggle Dropdown</span></button>
                                                        <div class="dropdown-menu dropdown-menu-right "
                                                             x-placement="bottom-end"
                                                             style="position: absolute; transform: translate3d(-170px, 26px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                            <a onclick="" class="dropdown-item text-danger"
                                                               href="#"><span
                                                                    class="fas fa-trash-alt mr-2"></span>Remove</a>
                                                        </div>
                                                        <input type="hidden" name="skills[]" value="{{ skill }}">
                                                    </div>
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}

                                {% else %}
                                    <tr>
                                        <td style="color: lightgrey">This tutorial offers no skills yet</td>
                                        <td></td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {#                  add new skill modal  #}

                    <div class="modal fade" id="modalNewSkill" tabindex="-1" role="dialog"
                         aria-labelledby="modal-default"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h6 class="modal-title align-middle">Add new skill</h6>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="newSkillInput">Skill</label>
                                        <input class="form-control" type="text" name="skills[]" id="newSkillInput">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-sm btn-success">Save
                                    </button>
                                    <button type="button" class="btn btn-link text-danger ml-auto" data-dismiss="modal">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 mb-4 mb-xl-0 ">
                        <div class="card card-body bg-white border-light  mb-4">

                            <div class="d-flex justify-content-between">
                                <h2 class="h5 mb-4">Requirements</h2>

                                <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal"
                                        data-target="#modalNewReq" style="height: 33.33%"><i class="far fa-plus"></i>
                                </button>
                            </div>

                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="border-0">Name</th>
                                    <th class="border-0"></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    {% if requirements|default %}
                                    {% for req in requirements %}
                                    {% if 'http' in req %}
                                        {% set req = commonground_resource(req) %}
                                        <td>{{ req.name }}</td>
                                        <td class="text-right">
                                            <div class="btn-group ml-md-3">
                                                <button
                                                    class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                    data-toggle="dropdown" aria-haspopup="true"
                                                    aria-expanded="true"><span class="icon icon-sm"><span
                                                            class="fas fa-ellipsis-h icon-dark"></span> </span><span
                                                        class="sr-only">Toggle Dropdown</span></button>
                                                <div class="dropdown-menu dropdown-menu-right"
                                                     x-placement="bottom-end"
                                                     style="position: absolute; transform: translate3d(-170px, 26px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                    <a onclick="" class="dropdown-item text-danger"
                                                       href="#"><span
                                                            class="fas fa-trash-alt mr-2"></span>Remove</a>
                                                </div>
                                            </div>
                                            <input type="hidden" name="coursePrerequisites[]" value="{{ req['@id'] }}">
                                        </td>
                                    {% else %}
                                        <td>{{ req }}</td>
                                        <td class="text-right">
                                            <div class="btn-group ml-md-3">
                                                <button
                                                    class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                    data-toggle="dropdown" aria-haspopup="true"
                                                    aria-expanded="true"><span class="icon icon-sm"><span
                                                            class="fas fa-ellipsis-h icon-dark"></span> </span><span
                                                        class="sr-only">Toggle Dropdown</span></button>
                                                <div class="dropdown-menu dropdown-menu-right "
                                                     x-placement="bottom-end"
                                                     style="position: absolute; transform: translate3d(-170px, 26px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                    <a onclick="" class="dropdown-item text-danger"
                                                       href="#"><span
                                                            class="fas fa-trash-alt mr-2"></span>Remove</a>
                                                </div>
                                                <input type="hidden" name="coursePrerequisites[]" value="{{ req }}">
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                                {% endfor %}
                                {% else %}
                                    <tr>
                                        <td>There no requirements for this tutorial yet</td>
                                        <td>
                                        </td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {#                  add new requirement modal  #}

                    <div class="modal fade" id="modalNewReq" tabindex="-1" role="dialog"
                         aria-labelledby="modal-default"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h6 class="modal-title align-middle">Add new requirement</h6>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="newReqInput">Requirement</label>
                                        <input class="form-control" type="text" name="coursePrerequisites[]"
                                               id="newReqInput">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-sm btn-success">Save
                                    </button>
                                    <button type="button" class="btn btn-link text-danger ml-auto" data-dismiss="modal">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 mb-4 mb-xl-0">
                        <div class="card card-body bg-white border-light">
                            <h2 class="h5 mb-4">Activities</h2>
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="border-0">
                                        {#                                    <div class="form-check dashboard-check">#}
                                        {#                                        <input class="form-check-input" type="checkbox" value="" id="userCheck55">#}
                                        {#                                        <label class="form-check-label" for="userCheck55"></label>#}
                                        {#                                    </div>#}
                                    </th>
                                    <th class="border-0">Name</th>
                                    {#                                <th class="border-0">Action</th>#}
                                </tr>
                                </thead>
                                <tbody>
                                {% if activities is defined and activities is not empty %}
                                    {% for activity in activities %}
                                        <tr>
                                            <td>
                                                <div class="form-check dashboard-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           value="/activities/{{ activity.id }}"
                                                           id="{{ activity.id }}Checkbox" name="activities[]"
                                                           {% if tutorial.activities|default %}{% for act in tutorial.activities %}{% if activity.id == act.id %}checked{% endif %}{% endfor %}{% endif %}>
                                                    <label class="form-check-label"
                                                           for="{{ activity.id }}Checkbox"></label>
                                                </div>
                                            </td>
                                            <td><span
                                                    class="font-weight-normal">{{ activity.name }}</span>
                                            </td>
                                            {#                                        <td>#}
                                            {#                                            <div class="btn-group">#}
                                            {#                                                <button#}
                                            {#                                                    class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"#}
                                            {#                                                    data-toggle="dropdown" aria-haspopup="true"#}
                                            {#                                                    aria-expanded="false"><span#}
                                            {#                                                        class="icon icon-sm"><span#}
                                            {#                                                            class="fas fa-ellipsis-h icon-dark"></span> </span><span#}
                                            {#                                                        class="sr-only">Toggle Dropdown</span>#}
                                            {#                                                </button>#}

                                            {#                                                <div class="dropdown-menu"><a class="dropdown-item" href="#"><span#}
                                            {#                                                            class="fas fa-user-shield mr-2"></span> Reset Pass</a> <a#}
                                            {#                                                        class="dropdown-item" href="#"><span#}
                                            {#                                                            class="fas fa-eye mr-2"></span>View#}
                                            {#                                                        Details</a> <a class="dropdown-item text-danger" href="#"><span#}
                                            {#                                                            class="fas fa-user-times mr-2"></span>Suspend</a></div>#}
                                            {#                                            </div>#}

                                            {#                                            <a href="#" class="text-danger ml-2" title="" data-toggle="modal"#}
                                            {#                                               data-target="#{{ activity.id }}"><span#}
                                            {#                                                    class="fas fa-times-circle"></span></a>#}
                                            {#                                        </td>#}
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                            {% if activities|default %}
                                {% for activity in activities %}
                                    <div class="modal fade" id="{{ activity.id }}" tabindex="-1" role="dialog"
                                         aria-labelledby="modal-default" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h6 class="modal-title">Edit {{ activity.id }}</h6>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>With less than a month to go before the European Union enacts new
                                                        consumer privacy laws for its citizens, companies around the
                                                        world
                                                        are updating their terms of service agreements to comply.</p>
                                                    <p>The European Unionâ€™s General Data Protection Regulation
                                                        (G.D.P.R.)
                                                        goes into effect on May 25 and is meant to ensure a common set
                                                        of
                                                        data rights in the European Union. It requires organizations to
                                                        notify users as
                                                        soon as possible of high-risk data breaches that could
                                                        personally
                                                        affect them.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-sm btn-secondary">I Got It
                                                    </button>
                                                    <button type="button" class="btn btn-link text-danger ml-auto"
                                                            data-dismiss="modal">Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </form>
{% endblock %}
