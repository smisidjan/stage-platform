{% extends "dashboard/base.html.twig" %}

{% block content %}
    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span
                                class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item"><a
                            href="{{ path('app_dashboardorganization_tutorials') }}">{{ 'Tutorials'|trans|capitalize }}</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'Tutorial'|trans|capitalize }}</li>
                </ol>
            </nav>
            {% if tutorial['@id'] is defined and tutorial['@id'] is not empty %}
                <h2 class="h4">{{ tutorial.name }} {{ 'To adjust'|trans|capitalize }}</h2>
                <p class="mb-0">{{ 'change your tutorial here'|trans|capitalize }}.</p>
            {% else %}
                <h2 class="h4">{{ 'post tutorial'|trans|capitalize }}</h2>
                <p class="mb-0">{{ 'post a new tutorial via our form'|trans|capitalize }}.</p>
            {% endif %}
        </div>
    </div>

    <form action="{{ path('app_dashboardorganization_tutorial',{'id': tutorial.id}) }}" method="post">
        <div class="row">
            <div class="col-12 ">
                <div class="card card-body bg-white border-light shadow-sm mb-4">
                    <h2 class="h5 mb-4">{{ 'general information'|trans|capitalize }}</h2>

                    {% if tutorial['@id'] is defined and tutorial['@id'] is not empty %}
                        <input type="hidden" name="@id" id="@id" value="{{ tutorial['@id'] }}">
                    {% endif %}
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="Tutorial name">{{ 'name'|trans|capitalize }} <span
                                        class="text-danger">*</span></label>
                                <input
                                    class="form-control"
                                    id="name"
                                    type="text"
                                    {% if tutorial.name|default %}
                                        value="{{ tutorial.name }}"
                                    {% else %}
                                        placeholder="{{ 'your tutorial name'|trans|capitalize }}"
                                    {% endif %}
                                    name="name"
                                    required
                                >
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="description">{{ 'description'|trans|capitalize }} <span class="text-danger">*</span></label>
                                <input
                                    class="form-control"
                                    id="description"
                                    type="text"
                                    required=""
                                    {% if tutorial.description is defined and tutorial.description is not empty %}
                                        value="{{ tutorial.description }}"
                                    {% else %}
                                        placeholder="{{ 'your tutorial description'|trans|capitalize }}"
                                    {% endif %}
                                    name="description"
                                    required
                                >
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="text">{{ 'text'|trans|capitalize }}</label>
                                {% if tutorial.text is defined and tutorial.text is not empty %}
                                    <textarea class="form-control" id="text" name="text"
                                              rows="3" cols="6">{{ tutorial.text }}
                                    </textarea>
                                {% else %}
                                    <textarea class="form-control" id="text" name="text"
                                              placeholder="{{ 'the text of your tutorial will be displayed here'|trans|capitalize }}"
                                              rows="3" cols="6">
                                    </textarea>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="additionalType">{{ 'type'|trans|capitalize }}</label>
                                <select class="form-control" name="additionalType" id="additionalType">
                                    <option
                                        {% if tutorial.additionalType|default and tutorial.additionalType == 'werkomgeving' %}
                                            selected
                                        {% endif %}
                                        value="code">{{ 'code'|trans }}
                                    </option>
                                    <option
                                        {% if tutorial.additionalType|default and tutorial.additionalType == 'setup' %}
                                            selected
                                        {% endif %}
                                        value="Soft skills">{{ 'soft skills'|trans }}
                                    </option>
                                    <option
                                        {% if tutorial.additionalType|default and tutorial.additionalType == 'layout' %}
                                            selected
                                        {% endif %}
                                        value="life"> {{ 'life'|trans }}
                                    </option>
                                    <option
                                        {% if tutorial.additionalType|default and tutorial.additionalType == 'datamodellen' %}
                                            selected
                                        {% endif %}
                                        value="onboarding">{{ 'onboarding'|trans }}
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="time required">{{ 'time required'|trans|capitalize }} <span
                                        class="text-danger">*</span></label>
                                <input
                                    class="form-control"
                                    id="description"
                                    type="text"
                                    {% if tutorial.timeRequired is defined and tutorial.timeRequired is not empty %}
                                        value="{{ tutorial.timeRequired }}"
                                    {% else %}
                                        placeholder="{{ 'The time required to read the tutorial'|trans|capitalize }}"
                                    {% endif %}
                                    name="timeRequired"
                                    required
                                >
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="educationalCredentialAwarded">{{ 'educational credential'|trans|capitalize }}
                                    <span class="text-danger">*</span></label>
                                <input
                                    class="form-control"
                                    id="educationalCredentialAwarded"
                                    type="text"
                                    {% if tutorial.educationalCredentialAwarded is defined and tutorial.educationalCredentialAwarded is not empty %}
                                        value="{{ tutorial.educationalCredentialAwarded }}"
                                    {% else %}
                                        placeholder="{{ 'the level of education required for this tutorial'|trans|capitalize }}"
                                    {% endif %}
                                    name="educationalCredentialAwarded"
                                    required
                                >
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="video">{{ 'video url'|trans|capitalize }}</label>
                                <input
                                    class="form-control"
                                    id="video"
                                    type="text"
                                    {% if tutorial.video is defined and tutorial.video is not empty %}
                                        value="{{ tutorial.video }}"
                                    {% else %}
                                        placeholder="{{ 'a url for a video as an example'|trans|capitalize }}"
                                    {% endif %}
                                    name="video"
                                >
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label
                                    for="occupationalCredentialAwarded">{{ 'occupational credential'|trans|capitalize }}</label>
                                {% if tutorial.occupationalCredentialAwarded is defined and tutorial.occupationalCredentialAwarded is not empty %}
                                    <textarea class="form-control" id="occupationalCredentialAwarded"
                                              name="occupationalCredentialAwarded"
                                              rows="3" cols="6">{{ tutorial.occupationalCredentialAwarded }}</textarea>
                                {% else %}
                                    <textarea class="form-control" id="occupationalCredentialAwarded"
                                              name="occupationalCredentialAwarded"
                                              placeholder="{{ 'indicate in the tutorial which professional certificate you receive'|trans|capitalize }}"
                                              rows="3" cols="6"></textarea>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">{{ 'save all'|trans|capitalize }}</button>
                    </div>
                </div>
            </div>
        </div>

        {% if tutorial.id != 'new' %}
            <h3 class="h4">{{ 'participants'|trans|capitalize }}</h3>
            {% if participants|default %}
                <p class="mb-0">{{ 'these people are following your tutorial'|trans|capitalize }}</p>

                <div class="row">
                    <div class="col-12">
                        <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th class="border-0">
                                    </th>
                                    <th class="border-0">{{ 'name'|trans|capitalize }}</th>
                                    <th class="border-0">{{ 'date created'|trans|capitalize }}</th>
                                    <th class="border-0">{{ 'verified'|trans|capitalize }}</th>
                                    <th class="border-0">{{ 'status'|trans|capitalize }}</th>
                                    <th class="border-0">{{ 'action'|trans|capitalize }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if participants is defined and participants is not empty %}
                                    {% for participant in participants %}
                                        {% if participant.person is defined and participant.person is not empty and commonground_is_resource(participant.person) %}
                                            {% set participantPerson = commonground_resource(participant.person) %}
                                        {% endif %}
                                        <tr>
                                            <td>
                                                <div class="form-check dashboard-check">
                                                    <input class="form-check-input" type="checkbox" value=""
                                                           id="userCheck1">
                                                    <label class="form-check-label" for="userCheck1"></label>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="#" class="d-flex align-items-center">
                                                    <img src="/bundles/rocket/assets/img/team/profile-picture-1.jpg"
                                                         class="user-avatar rounded-circle mr-3" alt="Avatar">
                                                    <div class="d-block">
                                                        <span class="font-weight-bold">
                                                            {% if participantPerson.name is defined and participantPerson.name is not empty %}
                                                                {{ participantPerson.name }}
                                                            {% else %}
                                                                {{ 'no name available'|trans|capitalize }}
                                                            {% endif %}
                                                        </span>
                                                        <div class="small text-gray">
                                                            {% if employeePerson.emais is defined and employeePerson.emais is not empty %}
                                                                {{ employeePerson.emais[0] }}
                                                            {% else %}
                                                                {{ 'no email available'|trans|capitalize }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </a>
                                            </td>
                                            <td>
                                                <span
                                                    class="font-weight-normal">{{ participant.dateCreated|date("d-m-Y", "Europe/Paris") }}</span>
                                            </td>
                                            <td>
                                                <span class="font-weight-normal"><span
                                                        class="fas fa-check-circle text-success mr-2"></span>{{ 'email'|trans|capitalize }}</span>
                                            </td>
                                            <td>
                                                <span
                                                    class="font-weight-normal text-success">{# participant.results #}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button
                                                        class="btn btn-link text-dark dropdown-toggle dropdown-toggle-split m-0 p-0"
                                                        data-toggle="dropdown" aria-haspopup="true"
                                                        aria-expanded="false">
                                                            <span class="icon icon-sm">
                                                                <span class="fas fa-ellipsis-h icon-dark"></span>
                                                            </span>
                                                        <span
                                                            class="sr-only">{{ 'Toggle Dropdown'|trans|capitalize }}</span>
                                                    </button>

                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="#">
                                                            <span class="fas fa-user-shield mr-2"></span>
                                                            {{ 'Reset Pass'|trans|capitalize }}
                                                        </a>
                                                        <a class="dropdown-item" href="#">
                                                            <span class="fas fa-eye mr-2"></span>
                                                            {{ 'View Details'|trans|capitalize }}
                                                        </a>
                                                        <a class="dropdown-item text-danger" href="#">
                                                            <span class="fas fa-user-times mr-2"></span>
                                                            {{ 'suspend'|trans|capitalize }}
                                                        </a>
                                                    </div>
                                                </div>

                                                <a href="#" class="text-danger ml-2" title="" data-toggle="tooltip"
                                                   data-original-title="Delete"><span
                                                        class="fas fa-times-circle"></span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                            <div class="card-footer px-3 d-flex align-items-center justify-content-between">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination mb-0">
                                        <li class="page-item"><a class="page-link"
                                                                 href="#">{{ 'Previous'|trans|capitalize }}</a></li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                                        <li class="page-item"><a class="page-link"
                                                                 href="#">{{ 'Next'|trans|capitalize }}</a></li>
                                    </ul>
                                </nav>
                                <div class="font-weight-bold small">{{ 'showing'|trans|capitalize }}
                                    <b>5</b> {{ 'out of'|trans }} <b>25</b> {{ 'entries'|trans }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="mb-0">{{ 'there are currently no participants on this tutorial'|trans|capitalize }}.</p>
            {% endif %}
            <br>
        {% endif %}

        <h3 class="h4">{{ 'products'|trans|capitalize }}</h3>
        {% if products|default %}
            {% if tutorial.id == 'new' %}
                <p class="mb-0">{{ 'choose the products for your tutorial'|trans|capitalize }}</p>
            {% elseif tutorial.products|default %}
                <p class="mb-0">{{ 'the checked products are the products of your tutorial'|trans|capitalize }}</p>
            {% else %}
                <p class="mb-0">{{ 'you can select the products for your tutorial here'|trans|capitalize }}</p>
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="border-0">
                                </th>
                                <th class="border-0">{{ 'name'|trans|capitalize }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if products is defined and products is not empty %}
                                {% for product in products %}
                                    {% set productUrl = commonground_cleanurl({'component':'pdc','type':'products','id':product.id}) %}
                                    <tr>
                                        <td>
                                            <div class="form-check dashboard-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       value="{{ productUrl }}"
                                                       id="{{ product.id }}Checkbox"
                                                       name="products[]"
                                                    {% if tutorial.products is defined and productUrl in tutorial.products %}
                                                        checked
                                                    {% endif %}
                                                >
                                                <label
                                                    class="form-check-label"
                                                    for="{{ product.id }}Checkbox">
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <a href="#" class="d-flex align-items-center">
                                                <span class="font-weight-bold">{{ product.name }}</span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <div class="card-footer px-3 d-flex align-items-center justify-content-between">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination mb-0">
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Previous'|trans|capitalize }}</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Next'|trans|capitalize }}</a></li>
                                </ul>
                            </nav>
                            <div class="font-weight-bold small">{{ 'showing'|trans|capitalize }}
                                <b>5</b> {{ 'out of'|trans }} <b>25</b> {{ 'entries'|trans }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="mb-0">{{ 'there are currently no products for this tutorial'|trans|capitalize }}</p>
            <a class="btn btn-primary mb-2" href="{{ path('app_dashboardorganization_products') }}">{{ 'create product'|trans|capitalize }}</a>
        {% endif %}

        <br>

        <h3 class="h4">{{ 'competences'|trans|capitalize }}</h3>
        {% if competences|default %}
            {% if tutorial.id == 'new' %}
                <p class="mb-0">{{ 'choose the competences for your tutorial'|trans|capitalize }}</p>
            {% elseif tutorial.competences|default %}
                <p class="mb-0">{{ 'the checked competences are the competences of your tutorial'|trans|capitalize }}</p>
            {% else %}
                <p class="mb-0">{{ 'you can select the competences for your tutorial here'|trans|capitalize }}</p>
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="border-0">
                                </th>
                                <th class="border-0">{{ 'name'|trans|capitalize }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if competences is defined and competences is not empty %}
                                {% for competence in competences %}
                                    {% set competenceUrl = commonground_cleanurl({'component':'mrc','type':'competences','id':competence.id}) %}
                                    <tr>
                                        <td>
                                            <div class="form-check dashboard-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       value="{{ competenceUrl }}"
                                                       id="{{ competence.id }}Checkbox"
                                                       name="competences[]"
                                                    {% if tutorial.competences is defined and competenceUrl in tutorial.competences %}
                                                        checked
                                                    {% endif %}
                                                >
                                                <label
                                                    class="form-check-label"
                                                    for="{{ competence.id }}Checkbox">
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <a href="#" class="d-flex align-items-center">
                                                <span class="font-weight-bold">{{ competence.name }}</span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <div class="card-footer px-3 d-flex align-items-center justify-content-between">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination mb-0">
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Previous'|trans|capitalize }}</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Next'|trans|capitalize }}</a></li>
                                </ul>
                            </nav>
                            <div class="font-weight-bold small">{{ 'showing'|trans|capitalize }}
                                <b>5</b> {{ 'out of'|trans }} <b>25</b> {{ 'entries'|trans }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="mb-0">{{ 'there are currently no competences for this tutorial'|trans|capitalize }}</p>
        {% endif %}

        <br>

        <h3 class="h4">{{ 'skills'|trans|capitalize }}</h3>
        {% if skills|default %}
            {% if tutorial.id == 'new' %}
                <p class="mb-0">{{ 'choose the skills for your tutorial'|trans|capitalize }}</p>
            {% elseif tutorial.skills|default %}
                <p class="mb-0">{{ 'the checked skills are the skills of your tutorial'|trans|capitalize }}</p>
            {% else %}
                <p class="mb-0">{{ 'you can select the skills for your tutorial here'|trans|capitalize }}</p>
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="border-0">
                                </th>
                                <th class="border-0">{{ 'name'|trans|capitalize }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if skills is defined and skills is not empty %}
                                {% for skill in skills %}
                                    {% set skillUrl = commonground_cleanurl({'component':'mrc','type':'skills','id':skill.id}) %}
                                    <tr>
                                        <td>
                                            <div class="form-check dashboard-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       value="{{ skillUrl }}"
                                                       id="{{ skill.id }}Checkbox"
                                                       name="skills[]"
                                                    {% if tutorial.skills is defined and skillUrl in tutorial.skills %}
                                                        checked
                                                    {% endif %}
                                                >
                                                <label
                                                    class="form-check-label"
                                                    for="{{ skill.id }}Checkbox">
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <a href="#" class="d-flex align-items-center">
                                                <span class="font-weight-bold">{{ skill.name }}</span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <div class="card-footer px-3 d-flex align-items-center justify-content-between">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination mb-0">
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Previous'|trans|capitalize }}</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item"><a class="page-link"
                                                             href="#">{{ 'Next'|trans|capitalize }}</a></li>
                                </ul>
                            </nav>
                            <div class="font-weight-bold small">{{ 'showing'|trans|capitalize }}
                                <b>5</b> {{ 'out of'|trans }} <b>25</b> {{ 'entries'|trans }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="mb-0">{{ 'there are currently no skills for this tutorial'|trans|capitalize }}</p>
        {% endif %}

        <br>

        <h3 class="h4">{{ 'requirements'|trans|capitalize }}</h3>
        {% if requirements|default %}
            {% if tutorial.id == 'new' %}
                <p class="mb-0">{{ 'choose the requirements for your tutorial'|trans|capitalize }}.</p>
            {% elseif tutorial.coursePrerequisites|default %}
                <p class="mb-0">{{ 'the checked activities are the requirements of your tutorial'|trans|capitalize }}.</p>
            {% else %}
                <p class="mb-0">{{ 'you can select the requirements for your tutorial here'|trans|capitalize }}.</p>
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th class="border-0">
                                </th>
                                <th class="border-0">{{ 'name'|trans|capitalize }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if requirements is defined and requirements is not empty %}
                                {% for requirement in requirements %}
                                    {% if requirement.id != tutorial.id %} {# do not show this tutorial as a possible requirement! #}
                                        <tr>
