{% extends "dashboard/base.html.twig" %}

{% block content %}

    <!-- breadcrumbs -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <div class="d-block mb-4 mb-md-0">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('app_default_index') }}"><span class="fas fa-home"></span></a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard_index') }}">{{ 'Dashboard'|trans|capitalize }}</a></li>
                    <li class="breadcrumb-item active">{{ 'tutorials'|trans|capitalize }}</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-xl-8">
            <div class="row">
                <div class="col-12 mb-4">
                    {% include 'dashboard_organization/tables/tutorials.html.twig'  with {'editPath': 'app_dashboardorganization_tutorial'} %}
                </div>
            </div>
        </div>


        <div class="col-12 col-xl-4 mb-4">
            <div class="col-12 px-0 mb-4">
                <div class="card border-light shadow-sm">
                    <div class="card-body">
                        <p>{{ 'tutorials help us all to gain and gather knowledge.'|trans|capitalize~' '~'in general but also custom made for your organization.'|trans|capitalize~' '~'it helps students to blend in easily :)'|trans|capitalize}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

