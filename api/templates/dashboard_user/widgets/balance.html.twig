<a href="{{ path('app_dashboarduser_transactions', {organization: item.id}) }}">
    <div class="card border-light shadow-sm">
        <div class="card-body">
            <div class="row d-block d-xl-flex align-items-center">
                <div class="col-12 col-xl-5 text-xl-center mb-3 mb-xl-0 d-flex align-items-center justify-content-xl-center">
                    <div class="icon icon-shape icon-md icon-shape-primary rounded mr-4 mr-sm-0"><span class="fas fa-wallet"></span></div>
                    <div class="d-sm-none">
                        <h2 class="h5">{{ 'wallet'|trans|capitalize }}</h2>
                        <h3 class="mb-1">{{ account.balance }}</h3>
                    </div>
                </div>
                <div class="col-12 col-xl-7 px-xl-0">
                    <div class="d-none d-sm-block">
                        <h2 class="h5">{{ 'wallet'|trans|capitalize }}</h2>
                        <h3 class="mb-1">{{ account.balance }}</h3>
                    </div>
                    <div class="small mt-2">
                        {% if payments[0].credit is defined and payments[0].credit is not empty %}
                            {% set amount = payments[0].credit / 100 %}
                            <span>{{ 'last change:'|trans|capitalize }}</span><br>
                            <span class="fas fa-angle-up text-success mr-1"></span>
                            <span class="text-success font-weight-bold">€{{ amount }}</span>
                        {% elseif payments[0].debit is defined and payments[0].debit is not empty %}
                            {% set amount = payments[0].debit / 100 %}
                            <span style="color: black">{{ 'last change:'|trans|capitalize }}</span><br>
                            <span class="fas fa-angle-down text-danger mr-1"></span>
                            <span class="text-danger font-weight-bold">€{{ amount }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>
