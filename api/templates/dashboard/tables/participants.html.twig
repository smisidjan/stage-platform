<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'participants'|trans|capitalize }}</h2>
            </div>
            <div class="col text-right">
            {% if addPath is  defined %}
                <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add'|trans|capitalize }}</a>
            {% else %}
                <a href="{{ path('app_education_tutorials') }}" class="btn btn-sm btn-secondary">{{ 'see all tutorials'|trans|capitalize }}</a>
            {% endif %}
            </div>
        </div>
    </div>
    {% if participants is  defined and participants|length > 0 %}
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'position'|trans|capitalize }}</th>
                <th scope="col">{{ 'organization'|trans|capitalize }}</th>
                <th scope="col">{{ 'status'|trans|capitalize }}</th>
                <th scope="col">Bounce rate</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants|slice(0, 10) %}
                <tr>
                    <th>{{ commonground_resource(participant.person).name }}</th>
                    <td> </td>
                    <td> </td>
                    <td>
                        {% if editPath is  defined %}
                            <a href="{{ path(editPath, {'id':participant.id }) }}" class="btn btn-primary">{{ 'edit'|trans|capitalize }}</a>
                        {% else %}
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{ participant.id }}">{{ 'edit'|trans|capitalize }}</button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card-body text-center">
        <p>{{ 'no tutorials found'|trans|capitalize }}</p>
        {% if addPath is  defined %}
            <a href="{{ path(addPath, {'id':'new' }) }}" class="btn btn-primary">{{ 'add your first participant!'|trans|capitalize }}</a>
        {% else %}
        <a href="{{ path('app_education_tutorials') }}" class="btn btn-primary">{{ 'find a participant'|trans|capitalize }}</a>
        {% endif %}
    </div>
    {% endif %}
</div>
