<div class="card border-light shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="h5">{{ 'products'|trans|capitalize }}</h2>
            </div>
            <div class="col text-right">
                {% if addPath is defined %}
                    <a href="{{ path(addPath, {'id':'new' }) }}"
                       class="btn btn-primary">{{ 'add'|trans|capitalize }}</a>
                {% endif %}
            </div>
        </div>
    </div>
    {% if products is  defined and products|length > 0 %}
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                <tr>
                    <th scope="col">{{ 'name'|trans|capitalize }}</th>
                    <th scope="col">{{ 'type'|trans|capitalize }}</th>
                    <th scope="col">{{ 'date created'|trans|capitalize }}</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for product in products|slice(0, 10) %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.type }}</td>
                        <td>{{ product.dateCreated|date("Y-m-d", "Europe/Paris") }}</td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-primary" href="{{ path('app_dashboardorganization_product', {'id':product.id }) }}">{{ 'view'|trans|capitalize }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="card-body text-center">
            <p>{{ 'no products found'|trans|capitalize }}</p>
            {% if addPath is defined %}
                <a href="{{ path(addPath, {'id':'new' }) }}"
                   class="btn btn-primary">{{ 'add your first product'|trans|capitalize }}</a>
            {% endif %}
        </div>
    {% endif %}
</div>
