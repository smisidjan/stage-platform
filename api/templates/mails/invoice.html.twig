<table align="center"  style="background-color: #F5F5F5; width: 100%; padding: 5px; max-width: 1200px;">
    <tr>
        <td align="center" style="text-align: -webkit-center">
            <table style="width: 80%; background-color: white;">
                <tr>
                    <td style="width: 100%; height: fit-content; background-color: #01689B">
                        <h1 style=" margin: 15px 0 15px 30px; color: white; font-family: Verdana,serif; ">Conduction Academy</h1>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td valign="top" align="left" width="100%">
                                    <center>
                                        <table cellspacing="0" cellpadding="0" width="100%" bgcolor="#ffffff">
                                            <tr>
                                                <td align="center">
                                                    <center>
                                                        <table style="margin-top: 20px" class="w320" cellspacing="0" cellpadding="0" width="500">
                                                            <tr>
                                                                <td class="body-padding mobile-padding">

                                                                    <table cellspacing="0" cellpadding="0" width="100%">
                                                                        <tr>
                                                                            <td class="left" style="padding-bottom:40px; text-align:left;">
                                                                                {{ 'dear'|trans|capitalize}} {{ receiver }},<br>
                                                                                {{ 'this is your invoice created by conduction academy'|trans|capitalize }}
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td class="left" style="padding-bottom:20px; text-align:left;">
                                                                                <b>{{ 'invoice'|trans|capitalize }}:</b> {{ invoice.reference }}
                                                                            </td>
                                                                        </tr>
                                                                    </table>

                                                                    <table cellspacing="0" cellpadding="0" width="100%">
                                                                        <tr>
                                                                            <td>
                                                                                <b>{{ 'name'|trans|capitalize }}</b>
                                                                            </td>
                                                                            <td>
                                                                                <b>{{ 'description'|trans|capitalize }}</b>
                                                                            </td>
                                                                            <td>
                                                                                <b>{{ 'amount'|trans|capitalize }}</b>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td class="border-bottom" height="5"></td>
                                                                            <td class="border-bottom" height="5"></td>
                                                                            <td class="border-bottom" height="5"></td>
                                                                        </tr>
                                                                        {% for item in invoice.items %}
                                                                            <tr>
                                                                                <td>{{ item.name }}</td>
                                                                                <td>{{ item.description }}</td>
                                                                                <td>€{{ item.price }}</td>
                                                                            </tr>
                                                                        {% endfor %}
                                                                    </table>
                                                                    <table style="margin-top: 30px;" cellpadding="0" cellspacing="0" width="100%">
                                                                        <tr>
                                                                            <td>
                                                                                <p><strong>Totaal: </strong>€{{ invoice.price }}</p>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                    <table style="margin-top: 50px; margin-bottom: 20px;" cellspacing="0" cellpadding="0" width="100%">
                                                                        <tr>
                                                                            <td class="left" style="text-align:left;">
                                                                                {{ 'thanks for your order'|trans|capitalize }},
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td class="left" width="129" height="20" style="padding-top:5px; text-align:left;">
                                                                                {{ 'conduction academy team'|capitalize }}
                                                                            </td>
                                                                        </tr>
                                                                    </table>

                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </center>
                                                </td>
                                            </tr>
                                        </table>
                                    </center>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
