<footer class="footer section pt-6 pt-md-8 pt-lg-10 pb-3 bg-primary text-white overflow-hidden">
    <div class="pattern top pattern-soft"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <a class="footer-brand mr-lg-5 d-flex" href="/">
                    <img src="/bundles/rocket/assets/img/brand/light.svg" class="mr-3" alt="Footer logo">
                    <h4>{% if app_name|default %}{{ app_name|trans|capitalize }}{% else %}Stage platform{% endif %}</h4>
                </a>
                <p class="my-4">{{ 'conduction Academy provides both matchmaking and an online internship platform'|trans|capitalize }}</p>
                <div class="dropdown mb-4 mb-lg-0">
                    {% set query = app.request.attributes.get('_route_params') %}
                    <a id="langsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle footer-language-link pb-2">
                        {% if app.request.locale == 'en'  %}
                        <img src="/bundles/rocket/assets/img/flags/united-kingdom.svg" alt="USA Flag" class="language-flag">{{ 'english'|trans|capitalize }}
                        {% elseif app.request.locale == 'nl'  %}
                        <img src="/bundles/rocket/assets/img/flags/netherlands.svg" alt="NL Flag" class="language-flag">{{ 'dutch'|trans|capitalize }}
                        {% else %}
                            {{ 'no curent language could be established'|trans|capitalize }}
                        {% endif %}
                        <i class="fas fa-chevron-down ml-1"></i>
                    </a>
                    <div aria-labelledby="langsDropdown" class="dropdown-menu dropdown-menu-center mt-0">
                        {% set query = query|merge({'_locale': 'en'}) %}
                        <a href="{{ absolute_url(path(app.request.attributes.get('_route'), query)) }}" class="dropdown-item text-gray text-sm"><img src="/bundles/rocket/assets/img/flags/united-kingdom.svg" alt="UK Flag" class="language-flag">{{ 'english'|trans|capitalize }}</a>
                        {% set query = query|merge({'_locale': 'nl'}) %}
                        <a href="{{ absolute_url(path(app.request.attributes.get('_route'), query)) }}" class="dropdown-item text-gray text-sm"><img src="/bundles/rocket/assets/img/flags/netherlands.svg" alt="NL Flag" class="language-flag">{{ 'dutch'|trans|capitalize }}</a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-sm-3 col-lg-2 mb-4 mb-lg-0">
                <h5>{{ 'Conduction'|trans|capitalize }}</h5>
                <ul class="links-vertical">
                    <li><a target="_blank" href="https://conduction.nl">{{ 'About us'|trans|capitalize }}</a></li>
                    <li><a target="_blank" href="https://conduction.nl/products">{{ 'Products'|trans|capitalize }}</a></li>
                    <li><a target="_blank" href="https://conduction.nl/contact">{{ 'Contact Us'|trans|capitalize }}</a></li>
                </ul>
            </div>
            <div class="col-6 col-sm-3 col-lg-2 mb-4 mb-lg-0">
                <h5>{{ 'Academy'|trans|capitalize }}</h5>
                <ul class="links-vertical">
                    <li><a href="{{ path('app_education_tutorials') }}">{{ 'tutorials'|trans|capitalize }}</a></li>
                    <li><a href="{{ path('app_internship_index') }}">{{ 'positions'|trans|capitalize }}</a></li>
                    <li><a href="{{ path('app_challenge_index') }}">{{ 'challenges'|trans|capitalize }}</a></li>
                    <li><a href="{{ path('app_team_index') }}">{{ 'teams'|trans|capitalize }}</a>
                    <li><a href="{{ path('app_organization_index') }}">{{ 'organizations'|trans|capitalize }}</a>
                    <li><a href="{{ path('app_student_index') }}">{{ 'students'|trans|capitalize }}</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-sm-6 col-lg-4">
                <h5>{{ 'newsletter'|trans|capitalize }}</h5>
                <p class="font-small">{{ 'the latest stageplatform news, articles, and resources, sent straight to your inbox every month.'|trans|capitalize }}</p>
                <form action="{{ path('app_default_newsletter') }}">
                    <div class="form-row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-secondary"><span>{{ 'subscribe'|trans|capitalize }}</span></button>
                        </div>
                    </div>
                </form>
                {#
                <small class="mt-2 form-text">{{ 'We’ll never share your details. See our'|trans|capitalize }} <a href="#" class="font-weight-bold text-underline">{{ 'Privacy Policy'|trans|capitalize }}</a></small>#}
            </div>
        </div>
        <hr class="my-4 my-lg-5">
        <div class="row">
            <div class="col pb-4 mb-md-0">
                <a href="https://conduction.nl" target="_blank" class="d-flex justify-content-center">
                    <img src="/images/logo.png" class="mb-3" alt="Conduction Logo" style="height: 40px;">
                </a>
                <div class="d-flex text-center justify-content-center align-items-center">
                    <p class="font-weight-normal font-small mb-0">Copyright © <a href="https://www.conduction.nl" target="_blank">Conduction</a> <span class="current-year"></span>. {{ 'All rights reserved'|trans|capitalize }}.</p>
                </div>
            </div>
        </div>
    </div>
</footer>
